<div>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td>Username</td>
            <td>{{username}}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{email}}</td>
        </tr>
        <tr>
            <td>Role</td>
            <td>{{role}}</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>

<hr>

<h4>Available apps</h4>
<table class="table table-striped table-bordered table-hover">
    {{#accessRow}}
    <tr>
        <td>{{id}}</td>
        <th>{{name}}</th>
    </tr>
    {{/accessRow}}
</table>

<hr>

<h4>Not available apps</h4>
<table class="table table-striped table-bordered table-hover" id="notAvail">
    {{#notRequest}}
    <tr>
        <td>{{id}}</td>
        <td class="name">{{name}}</td>
        <td class="status">
            <button class="btn btn-warning request">
                Request
            </button>
        </td>
    </tr>
    {{/notRequest}}
    {{#requested}}
    <tr>
        <td>{{id}}</td>
        <td class="name">{{name}}</td>
        <td class="status">
            Requested
        </td>
    </tr>
    {{/requested}}
</table>

<script>
    $(function () {

    })

    $('#notAvail').on("click", ".request", function () {
        let $this = $(this);
        let $row = $this.parents('tr');
        let $name = $row.find('.name');
        let app = $name.text();
        let $status = $row.find('.status');
        console.log(app);
        requestApp(app, function (result) {
            if (result != undefined && result.code > 0) {
                $status.text('Requested');
            }else {
                console.log('error');
            }
        })

    })

    function requestApp(appname, callback) {
        $.ajax({
            url: "/app/request",
            type: "POST",
            data: {
                app: appname,
            },
            success: function (result) {
                callback(result);
            },
            error: function (msg) {
                console.log(msg);
            },
        })
    }
</script>
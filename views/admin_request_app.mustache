<script src="/plugins/datatable/js/jquery.dataTables.min.js"></script>
<script src="/plugins/datatable/js/dataTables.bootstrap4.min.js"></script>
<link rel="stylesheet" href="/plugins/datatable/css/dataTables.bootstrap4.min.css">

<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title">Requests</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="requestTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>App</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#request}}
                        <tr>
                            <td></td>
                            <td class="user">{{uid}}</td>
                            <td class="app">{{app}}</td>

                            <td>
                                <button class="btn btn-success btn-sm accept">Accept</button>
                                <button class="btn btn-danger btn-sm decline">Decine</button>
                            </td>
                        </tr>
                        {{/request}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(function(){
        $('#requestTable').DataTable();
    })

    $('#requestTable').on("click", ".decline", function () {
        let $this = $(this);
        let $row = $this.parents('tr');
        let app = $row.find(".app").text();
        let uid = $row.find(".user").text();
        declineRequestApp(app, uid, function (result) {
            console.log(result);
            if (result.code > 0 && result.app == app && result.uid == uid) {
                $row.remove();
            }
        })
    })


    function declineRequestApp(app, uid, callback) {
        $.ajax({
            url: "/admin/app/request/decline",
            type: "POST",
            data: {
                app: app,
                uid: uid,
            },
            success: function (result) {

                callback(result);
            },
            error: function (msg) {
                console.log(msg);
            },
        })
    }

    $('#requestTable').on("click", ".accept", function () {
        let $this = $(this);
        let $row = $this.parents('tr');
        let app = $row.find(".app").text();
        let uid = $row.find(".user").text();
        acceptRequestApp(app, uid, function (result) {
            console.log(result);
            if (result.code > 0 && result.app == app && result.uid == uid) {
                $row.remove();
            }
        })
    })

    function acceptRequestApp(app, uid, callback) {
        $.ajax({
            url: "/admin/app/request/accept",
            type: "POST",
            data: {
                app: app,
                uid: uid,
            },
            success: function (result) {

                callback(result);
            },
            error: function (msg) {
                console.log(msg);
            },
        })
    }
</script>